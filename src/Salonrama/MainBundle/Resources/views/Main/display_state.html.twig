{% extends "SalonramaMainBundle:Main:main.html.twig" %}

{% block head %}
	<title>{{ title }}</title>
{% endblock %}

{% block body %}
	<h1>{{ title }}</h1>

	{% autoescape false %}
	{% if state.state == 0 %}
	<div class="frame-small frame-small-green">
		<i class="icon-ok"></i>{{ state.text }}
	</div>
	{% else %}
	<div class="frame-small frame-small-red">
		<i class="icon-warning-sign"></i>{{ state.text }}
	</div>
	{% endif %}
	{% endautoescape %}
{% endblock %}