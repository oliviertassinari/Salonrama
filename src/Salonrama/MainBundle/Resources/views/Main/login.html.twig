{% extends "SalonramaMainBundle:Main:main.html.twig" %}

{% block head %}
	<title>Se connecter</title>

    <link rel="stylesheet" href="{{ asset('bundles/salonramamain/css/form.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/salonramamain/css/tooltip.css') }}"/>

	<script src="{{ asset('bundles/salonramamain/js/form.js') }}"></script>

	<script>

	$(document).ready(function()
	{
		$('#login-email').focus();

		Form = new Form('login-post', 'login-submit', 'login-global-state', function(result, values, form){
			if(result == 0)
			{
				form.submit();
			}
		});
		Form.addInput('login-email', { regexp: 'email', maxLength: 320 });
		Form.addInput('login-password', { minLength: 4, maxLength: 25 });
	});

	</script>

	<style>

	#login-post{
	margin-bottom:50px;
	}

	</style>
{% endblock %}

{% block body %}
	<form method="post" action="{{ path('salonrama_main_login') }}" id="login-post">
	<fieldset>
		<legend>Accéder à mon compte</legend>

		<fieldset class="form-fieldset">
			<label for="login-email">Adresse email</label>
			<div class="form-controls">
				<input type="text" name="email" id="login-email" value="{{ email }}">
			</div>
		</fieldset>

		<fieldset class="form-fieldset">
			<label for="login-password">Mot de passe</label>
			<div class="form-controls">
				<input type="password" name="password" id="login-password"><br><br>
				<a href="{{ path('salonrama_main_forgot_password') }}" tabindex="-1" style="font-size:12px;">J'ai oublié mon mot de passe</a>
			</div>
		</fieldset>

		<fieldset class="form-fieldset">
			<label for="login-remember">
				Se souvenir de moi
				<span class="tooltip">
					<i class="icon-question-sign"></i>
					<span>En cochant cette case, vous resterez connecté sur cet ordinateur.<br/>
					Dans le cas contraire, en fermant votre navigateur vous serez déconnecté.</span>
				</span>
			</label>
			<div class="form-controls">
				<input type="checkbox" name="remember" id="login-remember"/>
			</div>
		</fieldset>

		<div class="form-actions">
			<div id="login-global-state" class="form-global-state cadre-small"></div>
			<button type="submit" id="login-submit" class="button-small button-small-green"><i class="icon-lock"></i>Se connecter</button>
		</div>
	</fieldset>
	</form>

	<form method="post" action="">
	<fieldset>
		<legend>Je ne suis pas encore inscrit</legend>
		<p style="margin:10px 0 10px; text-align:center;">
			<a href="etape1.php" class="button-big button-big-blue">
				Créez maintenant le site de votre<br/>
				<span style="font-size:18px;">Salon de coiffure</span>
			</a>
		</p>
	</fieldset> 
	</form>
{% endblock %}