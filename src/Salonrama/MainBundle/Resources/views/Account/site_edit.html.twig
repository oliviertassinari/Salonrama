	<script>

	var LocHomeSite = '{{ pathFront }}';

	function Initialisation()
	{
		{% autoescape false %}
		GBlock.List = {{ blockList }};

		GData.List = {{ dataList }};

		GTheme.List = {{ themeList }};
		GTheme.Act = '{{ themeAct }}';

