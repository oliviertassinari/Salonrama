		GImage.List = {{ imageList }};
		{% endautoescape %}

		Initi();

	window.onbeforeunload = function(){ return 'Vos modifications n\'on pas été enregistrées.\nPour les enregistrer : cliquez sur "Annuler", puis sur "Modifier", en bas.'; };

	document.getElementById('EtapeValide').onclick = function(){ setCadSave(); };
	document.getElementById('EtapeSuivant').onclick = function()
	{
		if(confirm('Voulez-vous publier vos modifications avant de quitter cette page ?'))
		{
			setCadSave(function(){ window.onbeforeunload = ''; document.location = '/mon_compte'; });
		}
		else
		{
			window.onbeforeunload = '';
			document.location = '/mon_compte';
		}
	};

	document.getElementById('CreatorHeadLogo').onclick = function()
	{
		if(confirm('Voulez-vous retourner à la page d\'accueil de Salonrama et sauvegarder vos modifications ?'))
		{
			setCadSave(function(){ window.onbeforeunload = ''; document.location = '/'; });
		}
	};
}

function setCadSave(CallBack)
{
	CadInfo.open('Modification', '<div id="CadSaveIcone"></div><div id="CadSaveLoad"></div><div id="CadSaveTxt">Modification en cours...</div><div id="CadSaveMore"></div>');

	var d = Ot.getTime();
	var retard = 2000;
	var BlockList = GBlock.getSave();

	var CallBack2 = function()
	{
		Ot.SendAjax('POST', 'admin/site-publier.php', {}, function(xhr)
		{
			Ot.decodeAjaxReturn(xhr.responseText, function(description)
			{
				var d2 = Ot.getTime() - d;

				if(d2 < retard){
					setTimeout(function(){ CallBack4(); }, retard - d2);
				}
				else{
					CallBack4();
				}
			},
			function(description)
			{
				alert('Erreur : ' + description);
			});

			removeBarreChargement();
		});
	};

	var CallBack4 = function()
	{
		if(Ot.isFonc(CallBack))
		{
			setTimeout(function()
			{
				CallBack();
				CadInfo.close();
			}, 1000);
		}
		else
		{
			document.getElementById('CadSaveMore').innerHTML += 'Vos modifications on été publiées sur <a href="{{ site_url }}" target="_blank">{{ site_url }}</a>. Maintenant vous pouvez :<br/>'+
			'<button type="button" class="ButtonSmallBlue" onclick="window.onbeforeunload = \'\'; document.location=\'/admin/site-page.php\'" title="Retourner à l\'administration de votre site"><img src="image/icone/back.png"/>Arrêter et retourner à la page "Mon compte".</button>'+
			' ou  <button type="button" class="ButtonSmallGreen" onclick="CadInfo.close()"><img src="image/icone/modif.png"/>Continuer à modifier votre site</button>';
		}

		document.getElementById('CadSaveLoad').className = 'terminer'; 
		document.getElementById('CadSaveTxt').className = 'terminer'; 
		document.getElementById('CadSaveTxt').innerHTML = 'Modification terminée';
	};

	if(JSON.encode(BlockList) != JSON.encode(GBlock.List[GPage.Act])){
		GBlock.List[GPage.Act] = BlockList;
		GPage.saveVar(['ImageList', 'DataList', 'BlockList'], [JSON.encode(GImage.List), JSON.encode(GData.List), JSON.encode(GBlock.List)], CallBack2);
	}
	else{
		GBlock.List[GPage.Act] = BlockList;
		GPage.saveVar(['ImageList', 'DataList'], [JSON.encode(GImage.List), JSON.encode(GData.List)], CallBack2);
	}
}

